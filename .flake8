[flake8]
max-line-length = 88
max-complexity = 8

exclude =
  .git,
  .venv,
  .tox,
  tests,
  migrations

ignore =
  # http://flake8.pycqa.org/en/2.5.5/warnings.html#warning-error-codes
  # pydocstyle - docstring conventions (PEP257)
  # [pydocstyle] missing docstring
  D1,
  # [pydocstyle] 1 blank line required before class docstring
  D203,
  # [pydocstyle] Multi-line docstring summary should start at the first line
  D212,
  # [pydocstyle] Section name should end with a newline
  D406,
  # [pydocstyle] Missing dashed underline after section
  D407,
  # [pydocstyle] No blank lines allowed between a section header and its content
  D412,
  # [pycodestyle] line break before binary operator
  W503,
  # [pycodestyle] line break after binary operator
  W504,
  # [bandit] Use of mark_safe
  S308,
  # [bandit] Use of random
  S311,
  # [bandit] Use of django_mark_safe
  S703
